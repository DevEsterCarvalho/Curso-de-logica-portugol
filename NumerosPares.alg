algoritmo "NúmerosParesRegressiva"
// Função :
// Autor :
// Data : 06/03/2023
// Seção de Declarações 
var
   contador, valor: inteiro
inicio
      Escreva("Digite um valor: ")
      Leia (valor)
      Se valor %2=1 entao
         valor <- valor -1
      FimSe
      Para contador <- valor ate 0 passo -2 faca
           Escreval (contador)
      FimPara
fimalgoritmo
